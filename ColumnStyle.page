<apex:page standardController="Account">
    <apex:pageBlock title="My Content">
        <apex:pageBlockTable value="{!account.Contacts}" var="item">
            <apex:column value="{!item.name}" style="font-size: 50%;" />
            <apex:column value="{!item.phone}" style="font-size: 200%;" />
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>